                                <p class="card-text">{{ProductDescription}}</p>
                                <a href="pay_form" class="btn btn-primary">Buy</a>
                                <a href="" class="btn btn-primary">Rent</a>
                            </div>
                        </div>
                    </div>  
                    
                    {{/each}}
          
                </div>
            </div>

        </div>

       

