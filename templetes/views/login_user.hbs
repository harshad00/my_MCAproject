            </div>
        </div>
        <!-- ! for BootStrap card. -->

        <div class="heading">
            <h2 class="heading_text"> Products </h2>
        </div>
        <div class="main_card">
            <div class="container text-center">
                <div class="row">
                {{#each sell}}
