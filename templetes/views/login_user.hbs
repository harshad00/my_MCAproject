    <main class="main">
        <!-- ! for image lslider -->
        <div class="slider">
            <div id="carouselExampleAutoplaying" class="carousel slide slide_w" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="image//funchir.png" class="d-block  br_img" alt="...">
